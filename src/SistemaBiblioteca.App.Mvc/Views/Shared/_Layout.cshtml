<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Biblioteca</title>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.11.3/datatables.min.css" />
    <link href="~/Scripts/font-awesome/css/all.min.css" type="text/css" rel="stylesheet">
    <link href="~/wwwroot/css/responsive.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Scripts/font-awesome/css/all.min.css">
    <link href="~/Scripts/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/wwwroot/css/site.css" />
    <link href="~/Scripts/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
    <link href="~/Scripts/datepicker/datepicker.min.css" rel="stylesheet" />
    <link media="screen" rel="stylesheet" href="https://cdn.jsdelivr.net/sweetalert2/6.3.8/sweetalert2.min.css" />
    @RenderSection("LibCss", required: false)
    <link rel="stylesheet" href="~/wwwroot/css/app.css" />
    <link rel="stylesheet" href="~/wwwroot/css/app-modal.css" />
    @RenderSection("Css", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema Biblioteca", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Usuários", "Index", "Usuario")</li>
                    <li style="color:white;">@Html.ActionLink("Livros", "Index", "Livro")</li>
                    <li style="color:white;">@Html.ActionLink("Empréstimos", "Index", "Emprestimo")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container" style="margin-bottom: 200px;">
        @RenderBody()
    </div>

    <div class="container" style="position: fixed; bottom: 0px; width: 100%; background-color: #f5f5f5; padding: 20px; z-index: 10000000;">
        <footer class="text-center m-2" style="color: black">
            &copy; @DateTime.Now.Year - SistemaBiblioteca - <a asp-area="" asp-controller="#" asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Scripts/select2/js/select2.full.min.js"></script>
    <script src="~/Scripts/jquery.inputmask.min.js"></script>
    <script src="~/Scripts/jquery-confirm/jquery-confirm.min.js"></script>
    <script src="~/Scripts/jquery.blockUI/jquery.blockUI.min.js"></script>
    <script src="~/Scripts/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-validation/dist/additional-methods.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/sweetalert2/6.3.8/sweetalert2.min.js"></script>
    @RenderSection("LibJavascript", false)
    <script src="~/wwwroot/js/site.js"></script>
    <script src="~/wwwroot/js/app.js"></script>
    <script src="~/wwwroot/js/app-feedback.js"></script>
    <script src="~/wwwroot/js/app-modal.js"></script>
    <script type="text/javascript">
    </script>
    <script type="text/javascript">
            var _appPath = '@Url.Content("~/")';
    </script>
    @RenderSection("scripts", required: false)
    @RenderSection("Javascript", false)
</body>
</html>